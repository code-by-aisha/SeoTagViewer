{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "outDir": "dist/server",
    "rootDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node16",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "server/**/*",
    "shared/**/*",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}


